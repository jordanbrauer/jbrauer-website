{% extends "_layout" %}

{% set cards = [
  'Blog',
  'Portfolio',
  'Resume'
] %}

{# page title #}
{% if not title is defined %}
  {% set title = entry.title %}
{% endif %}

{# page content #}
{% block content %}
  <div class="row column">
    <div class="row small-up-1 medium-up-2 large-up-3">
      {% for card in cards %}
        <div class="column column-block">
          <div class="card fadein frame-one">
            <div class="card-image">
              <img src="http://placehold.it/900x900?text={{ card }}" alt="{{ card }}">
            </div>
            <div class="card-info">
              <h3 class="card-info-header">{{ card }}</h3>
              <p class="card-info-text">Read my {{ card|lower }} here.</p>
              <a href="{{ url(card)|lower }}" class="expanded button">Go</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
